{
  "name": "@perf/gql",
  "version": "1.0.0",
  "description": "Graphql server for the perf server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon main.js",
    "build": "vite build",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "ncc:build":"ncc build server.js -o ncc-dist",
    "compile": "bun ncc:build && bun build ncc-dist/index.js --minify --sourcemap --compile --outfile server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "ext": "js, jsx, json, gql, graphql",
    "watch": [
      ".",
      "../perf-server"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/schema": "^10.0.23",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "file-type": "^19.6.0",
    "graphql-modules": "^3.0.0",
    "graphql-scalars": "^1.24.2",
    "graphql-upload": "^17.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@liuli-util/vite-plugin-node": "^0.9.0",
    "ajv": "^8.17.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "globals": "^15.15.0",
    "nodemon": "^3.1.9",
    "vite": "^6.2.2",
    "vite-node": "^3.0.9",
    "vite-plugin-graphql-loader": "^4.0.4",
    "vite-plugin-node": "^4.0.0"
  }
}